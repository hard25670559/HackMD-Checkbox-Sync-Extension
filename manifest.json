{
  "manifest_version": 3,
  "name": "HackMD Checkbox Sync Extension",
  "version": "1.0",
  "description": "同步 HackMD preview 視窗的 HTML checkbox 狀態到 edit 視窗的 HTML 屬性。",
  "icons": {
    "16": "icons/16.png",
    "24": "icons/24.png",
    "32": "icons/32.png",
    "48": "icons/64.png",
    "64": "icons/64.png",
    "128": "icons/128.png",
    "256": "icons/256.png",
    "512": "icons/512.png"
  },
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["*://hackmd.io/*"],
      "js": ["inject.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["content.js"],
      "matches": ["*://hackmd.io/*"]
    }
  ]
}
